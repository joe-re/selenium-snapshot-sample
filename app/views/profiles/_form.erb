<%= form_for(@profile, url: profile_path) do |f| %>
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, size: '100x10' %>
  </div>
  <br />
  <div class="field">
    <%= f.file_field :avatar %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
