<h1>This is your profile</h1>

<% if @profile %>
<p><%= image_tag @profile.avatar.url(:medium) %></p>
<% end %>

<h3><p>Name: <%= current_user.username %></p></h3>
<h3><p>Email: <%= current_user.email %></p></h3>

<br>

<% if @profile %>
<h3>Introduction: </h3>
<%= simple_format(@profile.introduction.present? ? @profile.introduction : '未登録') %>
<% end %>

<% unless @profile %>
<p> <%= link_to 'Please register your profile!', new_profile_path %> </p>
<% else %>
<p> <%= link_to 'Edit your profile!', edit_profile_path %> </p>
<% end %>
